{
  "name": "eslint-plugin-jlc",
  "version": "0.1.0",
  "type": "commonjs",
  "description": "An opinionated collection of ESLint rules used by JLC.",
  "keywords": [
    "eslint",
    "eslint plugin",
    "eslint-plugin"
  ],
  "author": "zengxiaoluan",
  "main": "./lib/index.js",
  "exports": "./lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "npm-run-all \"lint:*\"",
    "lint:eslint-docs": "npm-run-all \"update:eslint-docs -- --check\"",
    "lint:js": "eslint .",
    "test": "mocha tests --recursive",
    "update:eslint-docs": "eslint-doc-generator",
    "fileNameIsLowerCase": "node ./scripts/lower-case.mjs"
  },
  "dependencies": {
    "requireindex": "^1.2.0"
  },
  "homepage": "https://github.com/zengxiaoluan/eslint-plugin-jlc",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@stylistic/eslint-plugin": "^2.6.4",
    "eslint": "^9.0.0",
    "eslint-doc-generator": "^1.0.0",
    "eslint-plugin-eslint-plugin": "^6.0.0",
    "eslint-plugin-n": "^17.0.0",
    "mocha": "^10.0.0",
    "npm-run-all2": "^6.1.2",
    "simple-git-hooks": "^2.11.1"
  },
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || >=21.1.0"
  },
  "peerDependencies": {
    "eslint": ">=8.57.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run fileNameIsLowerCase && npm run lint && npm run test",
    "pre-push": "npx simple-git-hooks",
    "preserveUnused": true
  },
  "license": "MIT"
}
